{% extends 'client/client.base.html.twig' %}

{% block body %}
    <div class="Loader"></div>
    <div class="wrapper">
        <nav class="navbar navbar-default navbar-fixed navbar-transparent white bootsnav">
            <div class="container">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu"><i class="fa fa-bars"></i></button>
                <div class="navbar-header">
                    <a class="navbar-brand" href="index.html"><img src="assets/img/logo-white.png" class="logo logo-display" alt=""><img src="img/image.jpg" class="logo logo-scrolled" alt=""></a>
                </div>

            </div>
        </nav>
        <div class="clearfix"></div>
        <div class="banner" style="background-image:url(img/image.jpg);">
            <div class="container">
                <div class="banner-caption">
                    <div class="col-md-12 col-sm-12 banner-text">
                        <h1>Comparateur du prix des hotels    </h1>
                        <form class="form-horizontal">
                            <div class="col-md-3 no-padd">
                                <div class="input-group">
                                    <select id="choose-city" class="form-control selectpicker" data-show-subtext="true"
                                            data-live-search="true">

                                        <option selected disabled>Destination</option>
                                        <option data-subtext="Ariana">Ariana</option>
                                        <option>Béja</option>
                                        <option>Ben Arous</option>
                                        <option>Bizerte</option>
                                        <option>Gabès</option>
                                        <option>Mahdia</option>
                                        <option>La Manouba</option>
                                        <option>Médenine</option>
                                        <option>Monastir</option>
                                        <option>Nabeul</option>
                                        <option>Sfax</option>
                                        <option>Sousse</option>
                                        <option>Tataouine</option>
                                        <option>Tozeur</option>
                                        <option>Tunis</option>
                                        <option>Zaghouane</option>
                                        <option>Gammarth</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <input type="date" min="{{ "now"|date("Y-m-d") }}" id="depart" placeholder="Départ .." onClick="$(this).removeClass('placeholderclass')" class="form-control right-bor dateclass placeholderclass"  id="date" >
                            </div>

                            <div class="col-md-3 col-sm-6">
                                <input type="date" max="{{ "now"|date("Y-m-d") }}" id="arrivee" placeholder="Arrivée .." onClick="$(this).removeClass('placeholderclass')" class="form-control right-bor dateclass placeholderclass"  id="date" >
                            </div>

                            <div class="col-md-3 no-padd">
                                <div class="input-group">
                                    <select id="chambre" class="form-control">
                                        <option disabled selected>Type chambre</option>
                                        <option>single</option>
                                        <option>double</option>
                                        <option>triple</option>

                                    </select>
                                </div>
                            </div>


                                <div class="input-group">
                                    <div class="col-md-2 col-sm-6">
                                        <button type="button" class="btn btn-primary" onclick="SearchHotel()">chercher   </button>


                                     </div>

                            </div>
                        </form>
                        <script>

                            function SearchHotel() {
                                var destination = document.getElementById('choose-city');
                                var selectedDestination = destination.options[destination.selectedIndex].value;
                                var arrivee = document.getElementById('arrivee').value;
                                var depart = document.getElementById('depart').value;
                                var chambre = document.getElementById('chambre');
                                var selectedChambre = chambre.options[chambre.selectedIndex].value;
                                var criteria = '?';
                                if (selectedDestination !== "Destination") {
                                    criteria += "&destination=" + selectedDestination;
                                }
                                if (arrivee !== "") {
                                    criteria += "&arrivee=" + arrivee;
                                }
                                if (depart !== "") {
                                    criteria += "&depart=" + depart;
                                }
                                if (selectedChambre !== "Type chambre") {
                                    criteria += "&chambre=" + selectedChambre;
                                }
                                window.location.href = "http://127.0.0.1:8000/resultat" + criteria;

                            }
                        </script>

                    </div>
                </div>
            </div>
            <div class="company-brand">
                <div class="container">
                    <div id="company-brands" class="owl-carousel">

                        <div class="brand-img"><img src="/img/logo-miramar-hotels.png" class="img-responsive" alt="" /></div>
                        <div class="brand-img"><img src="/img/movenpick.png" class="img-responsive" alt="" /></div>

                        <div class="brand-img"><img src="/img/sousse palace.png" class="img-responsive" alt="" /></div>
                        <div class="brand-img"><img src="/img/Hotel-1139-20160510-035018.png" class="img-responsive" alt="" /></div>
                        <div class="brand-img"><img src="/img/.png" class="img-responsive" alt="" /></div>
                        <div class="brand-img"><img src="/img/yahoo-home.png" class="img-responsive" alt="" /></div>
                        <div class="brand-img"><img src="/img/mothercare-home.png" class="img-responsive" alt="" /></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>



{% endblock %}