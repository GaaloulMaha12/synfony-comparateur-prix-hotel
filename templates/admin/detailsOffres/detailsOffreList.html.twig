{% extends 'admin/admin.base.html.twig' %}


{% block content %}

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">accueil</a>
        </li>
        <li class="breadcrumb-item active">Détails Offre</li>
    </ol>
    <div class="row">
        <div class="col-12 col-md-8"><h3>liste des détails offres </h3></div>
        <div class="col-6 col-md-4">

            <button id="addNewRow" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">ajouter détails offre </button>
        </div>
    </div>
    <table class="table table-striped table-dark"  >
        <thead>

        <tr>
            <th scope="col" >typechambre</th>
            <th scope="col" > categorie</th>
            <th scope="col" >typepension </th>
            <th scope="col" >prix</th>
            <th scope="col">Action </th>

        </tr>
        </thead>
        <tbody>
        {%for detailsoffre in detailsoffres %}

            <tr>
                <td> {{  offre.chambre.Typechambre}}</td>
                <td> {{  offre.categoriechambre.categorie }}</td>
                <td> {{  offre.pension.Typepension}}</td>
                <td> {{  offre.tarif}}</td>
                <td> {{  offre.lienoffre }}</td>



                <td><a href="/elements/editelement/{{ detailsoffre.id }}"> modifier    </a>
                    <a href="/elements/deletelement/{{ detailsoffre.id }}"> supprimer </a>

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>



    {#MODAL ADD#}
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="row">
                    <div class="col-sm">ajout  </div>
                </div>
                <div class="modal-body">
                    {{ form(form) }}
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}