{% extends 'admin/admin.base.html.twig' %}


{% block content %}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">accueil</a>
    </li>
    <li class="breadcrumb-item active">Paramètres</li>
</ol>
<div class="row">
    <div class="col-12 col-md-8"><h3>liste des paramètres</h3></div>
    <div class="col-6 col-md-4">

        <button id="addNewRow" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal" >ajouter une paramètre </button>
    </div>
</div>
<table class="table table-striped table-dark">
    <thead>

    <tr>
        <th scope="col" >Nom paramètre </th>
        <th scope="col" >type paramètre</th>
        <th scope="col" >valeur</th>
        <th scope="col" >Nom administrateur</th>
        <th scope="col">Action </th>

    </tr>
    </thead>
    <tbody>
    {%for parametre in parametres %}

        <tr>

            <td> {{  parametre.nomparametre }}</td>
            <td>  {{  parametre.typeparametre }}</td>
            <td>  {{ parametre.valeurparametre }}</td>
        
            <td> {{  parametre.administrateur.nom}}</td>




            <td><a href="/parametres/edit/{{ parametre.id }}"> modifier    </a>
            </td>
        </tr>
    {% endfor %}

    </tbody>
</table>
{#MODAL ADD#}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="row">
                    <div class="col-sm">ajout  </div>
                </div>
                <div class="modal-body">
                    {{ form(form) }}
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}